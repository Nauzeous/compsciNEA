from grid import Grid
from cells import Cell,Creature
class Game:

    def moveright(self,grid,cell):
        grid.gridmoveright()
        cell.cellmove(0,1)
    
    def moveleft(self,grid,cell):
        grid.gridmoveright()
        cell.cellmove(0,-1)

    def moveup(self,grid,cell):
        grid.gridmoveup()
        cell.cellmove(-1,0)  

    def movedown(self,grid,cell):
        grid.gridmoveup()
        cell.cellmoveup(1,0)



    
    