from game import Game
import pygame
import time
pygame.init()
pixellength = 1920
pixelheight = 1080
screen = pygame.display.set_mode((pixellength,pixelheight))
pygame.display.set_caption("simulator")

# create grid (gridsize, population)
game = Game(20,40,pixellength,pixelheight) # gridsize is the length of one side of the grid, so the amount of cells is gridsize^2


White = (255,255,255)
Black = (0,0,0)
screen.fill(Black)
game.gridclear()
game.generate()


