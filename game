from grid import Grid
from cells import Cell,Creature
class Game:
    def __init__(self,pgridsize, ppopulation,pixellength,pixelheight):
        self.gamegrid = Grid(pgridsize, ppopulation, pixellength,pixelheight)
        self.creatures = self.gamegrid.cells

    def moveright(self, cell):
        self.gamegrid.moveright()
        cell.cellmove(0,1)
    
    def moveleft(self, cell):
        self.gamegrid.moveleft()
        cell.cellmove(0,-1)

    def moveup(self,grid,cell):
        self.gamegrid.moveup()
        cell.cellmove(-1,0)  

    def movedown(self,grid,cell):
        self.gamegrid.movedown()
        cell.cellmoveup(1,0)



    
    